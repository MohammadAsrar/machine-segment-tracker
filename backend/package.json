{
  "name": "machine-segment-tracker-backend",
  "version": "1.0.0",
  "description": "Backend for Machine Segment Tracker application",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "seed": "node src/scripts/seedData.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint --ext .js,.ts src/",
    "lint:fix": "eslint --ext .js,.ts src/ --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "build": "echo 'No build step required for Node.js'",
    "start:prod": "NODE_ENV=production node src/server.js",
    "security-check": "npm audit --production",
    "analyze": "npx clinic doctor -- node src/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "moment": "^2.29.4",
    "mongoose": "^8.16.3",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.10",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "clinic": "^13.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.5",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "rules": {
      "node/exports-style": [
        "error",
        "module.exports"
      ],
      "node/file-extension-in-import": [
        "error",
        "always"
      ],
      "node/prefer-global/buffer": [
        "error",
        "always"
      ],
      "node/prefer-global/console": [
        "error",
        "always"
      ],
      "node/prefer-global/process": [
        "error",
        "always"
      ],
      "node/prefer-global/url-search-params": [
        "error",
        "always"
      ],
      "node/prefer-global/url": [
        "error",
        "always"
      ],
      "node/prefer-promises/dns": "error",
      "node/prefer-promises/fs": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
